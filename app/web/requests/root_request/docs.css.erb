

/* SECTION DOCS */

section#docs {
  <%= "background-color: green;" if @colors %>
  background-color: var(--primary-green);
  color: white; /* negativo */
}

section#docs .container > div {
  /* border: 1px solid black; */
}

section#docs h2 {
  font-size: 5rem;
  line-height: 4rem;
}

section#docs p a {
  font-weight: bold;
  text-decoration: underline;
  color: white;
  /* custom screen */
}

/* mobile */
@media screen and (max-width: 1200px) {
  section#docs p a {
    font-size: 1.5rem;
    /* letter-spacing: 0.25rem; */
    letter-spacing: 0.12rem;

  }
}

/* desktop */
@media screen and (min-width: 1200px) {
  section#docs p a {
    font-size: 2rem;
    letter-spacing: 0.5rem;
  }
}

